<!DOCTYPE html>
<h1 class="category-title">choose a thread</h1>
<% if (currentUser) {%>
    <form  action="/logout" method="post">
      <input class="logout" type="submit" value="l">
    </form>
 <% } %>
<div class="newthread"><a class="newthread-link" href="/threads/new">new</a></div>
<div class="category-container">
	<% allThreads.forEach(function (thread, i) { %>
	<% thread.tags.forEach(function (tag, i) { %>
		<% if (tag == "politics") { %>
			<div class="index-div politics"><a  class="index-link"href="/thread/<%= thread._id %>"><%= thread.title %> (comments: <%= thread.comments.length %>)<a/></div>
		<% }; %>
	<% }); %>
	<% }); %>
</div>
